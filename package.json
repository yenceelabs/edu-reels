{
  "name": "edu-reels",
  "version": "1.0.0",
  "private": true,
  "description": "AI-powered educational reels generator - concept to vertical video",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "db:generate": "pnpm --filter @edu-reels/db generate",
    "db:push": "pnpm --filter @edu-reels/db push",
    "qa": "npm run type-check && npm run build",
    "clean": "turbo clean && rm -rf node_modules"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@8.15.0"
}
